{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es2022",
    "paths": {
      "$src/*": ["./src/*"],
    }
  },
  "ts-node": {
   "transpileOnly": true,
   "require": [
    "tsconfig-paths/register"
    ]
  },
  "include": ["src/**/*.ts"],
  "compileOnSave": true,
}
